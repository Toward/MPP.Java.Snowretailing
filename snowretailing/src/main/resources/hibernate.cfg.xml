<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="connection.url">jdbc:mysql://localhost:3306/snowretailing_db</property>
        <property name="connection.driver_class">com.mysql.jdbc.Driver</property>

        <property name="connection.username">root</property>
        <property name="connection.password">root</property>

        <mapping class="shlackAndCo.snowretailing.dao.BrandEntity"/>
        <mapping class="shlackAndCo.snowretailing.dao.CharacteristicsEntity"/>
        <mapping class="shlackAndCo.snowretailing.dao.ContactDataEntity"/>
        <mapping class="shlackAndCo.snowretailing.dao.CredentialEntity"/>
        <mapping class="shlackAndCo.snowretailing.dao.EquipmentEntity"/>
        <mapping class="shlackAndCo.snowretailing.dao.EquipmentFeatureEntity"/>
        <mapping class="shlackAndCo.snowretailing.dao.EquipmentItemEntity"/>
        <mapping class="shlackAndCo.snowretailing.dao.OrderEntity"/>
        <mapping class="shlackAndCo.snowretailing.dao.PToREntity"/>
        <mapping class="shlackAndCo.snowretailing.dao.PermissionsEntity"/>
        <mapping class="shlackAndCo.snowretailing.dao.RentEntity"/>
        <mapping class="shlackAndCo.snowretailing.dao.ReviewEntity"/>
        <mapping class="shlackAndCo.snowretailing.dao.RoleEntity"/>
        <mapping class="shlackAndCo.snowretailing.dao.TypeEntity"/>
        <mapping class="shlackAndCo.snowretailing.dao.UserEntity"/>
    </session-factory>
</hibernate-configuration>